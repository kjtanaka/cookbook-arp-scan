#%Module1.0###########################################################
proc moduleVersion { } {
        if { ! [regexp {[^/]*$} [module-info name] ver] } {
                puts stderr "Internal modulefile error"
        }
        return $ver
}

set ver        [moduleVersion]
set path       <%= @prefix %>

proc ModulesHelp { } {
   puts stderr "This module adds Arp Scan to various paths"
   puts stderr "See http://www.nta-monitor.com/tools-resources/security-tools/arp-scan for further details"
}

module-whatis   "Sets up Arp Scan in your environment"

conflict parallel

prepend-path PATH $path/bin
prepend-path MANPATH $path/share/man

if [ module-info mode load ] {
        puts stderr "Arp Scan version $ver loaded"
}

if [ module-info mode switch2 ] {
        puts stderr "Arp Scan version $ver loaded"
}

if [ module-info mode remove ] {
        puts stderr "Arp Scan version $ver unloaded"
}
